  <!-- VR Scene -->
  <a-scene>
    <a-videosphere id="vSphere" youtube="url: https://www.youtube.com/watch?v=pWw78NhJJwQ; autoplay: true; loop: true;"></a-videosphere>
    <a-entity camera look-controls></a-entity>
  </a-scene>

  <script>
    const pantaiData = {
      bontolan: {
        url: 'https://www.youtube.com/watch?v=YnVuu8-fJV8',
        nama: 'ğŸŒŠ Pantai Bontolan',
        info: 'Pantai Bontolan memiliki pemandangan laut yang luas dengan pasir putih lembut dan ombak yang tenang. Cocok untuk berenang dan piknik keluarga.'
      },
      ponpon: {
        url: 'https://www.youtube.com/watch?v=pUBFrmgr_t4',
        nama: 'ğŸ–ï¸ Pantai Ponpon',
        info: 'Pantai Ponpon terkenal dengan tebing batu karangnya dan air yang jernih. Tempat favorit untuk foto panorama dan snorkeling.'
      },
      pauno: {
        url: 'https://www.youtube.com/watch?v=pWw78NhJJwQ',
        nama: 'ğŸŒ´ Pantai Lambangan Pauno',
        info: 'Selamat datang di Pantai Lambangan Pauno, surga tersembunyi di Luwuk Banggai ğŸŒ´. Cocok untuk wisata bahari, snorkeling, atau menikmati sunset.'
      }
    };

    function gantiPantai(pantai) {
      const data = pantaiData[pantai];
      const sphere = document.querySelector('#vSphere');
      sphere.setAttribute('youtube', 'url', data.url);
      sphere.components.youtube.playVideo(); // mainkan video baru

      // Update overlay info
      document.getElementById('pantaiNama').innerHTML = data.nama;
      document.getElementById('pantaiInfo').innerHTML = data.info;
    }
  </script>

